<h1>User List</h1>

<%= link_to 'New user', new_user_path %>

<table>
  <tr>
    <th><%= link_to 'Name', :sort => 'name' %></th>
    <th><%= link_to 'Age', :sort => 'age' %></th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
  <% end %>
</table>